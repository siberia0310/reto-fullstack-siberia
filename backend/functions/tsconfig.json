{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "rootDir": "src",      
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "resolveJsonModule": true,
  },
  "include": ["src"]
}
